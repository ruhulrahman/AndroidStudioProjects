<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    tools:context=".DetailsActivity">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        android:tint="@color/white"
        app:fabSize="auto"
        android:onClick="back"
        android:layout_margin="10dp"
        android:src="@drawable/ic_keyboard_backspace_black_24dp"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/movieImageTV"
            android:scaleType="fitXY"
            android:src="@drawable/avengers"
            android:layout_width="match_parent"
            android:layout_height="250dp" />
        <TextView
            android:id="@+id/movieNameTV"
            android:text="Avengers"
            android:textSize="18sp"
            android:textAlignment="center"
            android:textColor="@color/amour"
            android:padding="5dp"
            android:background="@color/bluebell"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/directorNameTV"
            android:text="Avengers"
            android:textSize="18sp"
            android:textAlignment="center"
            android:textColor="@color/dark_mountain"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <TextView
        android:layout_alignParentBottom="true"
        android:padding="10dp"
        android:background="@color/nasu_purple"
        android:gravity="center"
        android:textColor="@color/white"
        android:text="App Developed by Ruhul"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</RelativeLayout>